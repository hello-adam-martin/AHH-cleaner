# Airtable Configuration
# Copy this file to .env and fill in your actual values
# Note: Environment variables must be prefixed with EXPO_PUBLIC_ to be accessible in the app

# Your Airtable API key (Personal Access Token)
# Get it from: https://airtable.com/create/tokens
EXPO_PUBLIC_AIRTABLE_API_KEY=your_api_key_here

# Your Airtable Base ID
# Find it in your base URL: https://airtable.com/{BASE_ID}/...
EXPO_PUBLIC_AIRTABLE_BASE_ID=your_base_id_here

# Airtable Table Names
EXPO_PUBLIC_AIRTABLE_BOOKINGS_TABLE=Bookings
EXPO_PUBLIC_AIRTABLE_PROPERTIES_TABLE=Properties

# Field Names in your Bookings table
EXPO_PUBLIC_AIRTABLE_CHECKOUT_DATE_FIELD=Check Out
EXPO_PUBLIC_AIRTABLE_PROPERTY_LINK_FIELD=Property (Linked)
EXPO_PUBLIC_AIRTABLE_CHECKIN_DATE_FIELD=Check In
EXPO_PUBLIC_AIRTABLE_CLEANING_DURATION_FIELD=Cleaning Time
EXPO_PUBLIC_AIRTABLE_CONSUMABLES_COST_FIELD=Linen Cost
